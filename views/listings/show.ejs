<% layout("/layouts/boilerplate")%>
 <div class="row mt-3">
    <div class="col-8 offset-2">
    <h2><%= listing.title  %></h2>
  </div>
    <div class="card col-6 offset-2 show-card mb-2 listing-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">
                <%= listing.description  %> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN")  %> <br>
                <%= listing.location  %> <br>
                <%= listing.country  %>
            </p>
        </div>
    </div>
    <div class="btns mb-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  offset-2 edit-btn" >Edit</a>
        <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-4 edit-btn">Delete</button>
        </form>
    </div> <hr>

    <!-- Review Section -->
    <div class="col-8 offset-2 mb-3">
        <h4>Leave a Review:-</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" >
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please add some comment for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>

        <hr>
         
        <p><b>All Reviews</b></p>
        <div class="row">
            <% if (Array.isArray(listing.reviews)) { %>
                <% for (let review of listing.reviews) { %>
                    <div class="card col-5 5-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Jane Doe</h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text"><%= review.rating %> stars</p>
                            <form class="mb-3" method="POST" action="/listings/<%=listing._id %>/reviews/<%=review._id %>" >
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <p>No reviews yet</p>
            <% } %>
        </div>

    </div>
</div>
    
 

